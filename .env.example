# Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_PLATFORM=telegram  # telegram, discord, etc.

# API Security (for webhook endpoint)
API_KEY=your_secure_api_key_here
API_KEY_HEADER=X-API-Key

# Supabase Configuration - DEV/PROD Separation
# DEV Supabase - for RAG vector search (documents table)
SUPABASE_RAG_URL=https://your-dev-project.supabase.co
SUPABASE_RAG_KEY=your_dev_anon_key_here

# PROD Supabase - for chat storage (chat_messages table)
SUPABASE_CHAT_URL=https://your-prod-project.supabase.co
SUPABASE_CHAT_SERVICE_KEY=your_prod_service_role_key_here  # Bypasses RLS for bot writes

# LLM Provider (OpenAI, Anthropic, etc.)
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GROQ_API_KEY=your_groq_api_key_here

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=eneca-ai-bot

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300

# Vector Store Configuration
# Similarity threshold for RAG retrieval (0.0-1.0)
# Recommended: 0.7-0.9 for high-quality matches
# Lower to 0.3-0.5 only if documents have encoding issues
SIMILARITY_THRESHOLD=0.7
VECTOR_SEARCH_K=5

# Memory Configuration
ENABLE_CONVERSATION_MEMORY=true
MEMORY_TYPE=sqlite  # Options: memory, sqlite, supabase
MEMORY_DB_PATH=data/checkpoints.db

# Supabase Memory Configuration (when MEMORY_TYPE=supabase)
# Uses existing n8n_chat_histories table for conversation persistence
# Automatically uses SUPABASE_URL and SUPABASE_KEY from above
MEMORY_SUPABASE_TABLE=n8n_chat_histories

# MCP Server Configuration
# Eneca MCP server for project management operations
MCP_SERVER_URL=https://your-mcp-server.example.com/mcp
